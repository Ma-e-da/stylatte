<!-- 選択したPost内容 -->
<h3>スタイリング希望内容  by. <%= link_to @post.user.name, @post.user %> </h3>
    <div class="ui card">
      <%= image_tag @post.picture.url if @post.picture? %>
    </div>
<div class="ui segment">
  <%= @post.content %>

  <div class="ui divider"></div>


  <table class="ui very compact table">
  <thead>
    <tr><th>希望詳細</th>
    <th></th>
  </tr></thead>
  <tbody>
    <tr>
      <td>アイテム</td>
      <td><%= @post.product %></td>


    </tr>
    <tr>
      <td>だれの</td>
      <td><%= @post.for_who %></td>

    </tr>
    <tr>
      <td>サイズ</td>
      <td><%= @post.size %></td>

    </tr>
    <tr>
      <td>色</td>
      <td><%= @post.color %></td>

    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @post.style_genre %></td>

    </tr>
    <tr>
      <td>シーン</td>
      <td><%= @post.scene %></td>

    </tr>
    <tr>
      <td>シーズン</td>
      <td><%= @post.season %></td>

    </tr>
    <tr>
      <td>価格帯</td>
      <td><%= @post.price_range %></td>
    </tr>
    <tr>
      <td>いつまでにほしい</td>
      <td><%= @post.deadline %></td>
    </tr>
  </tbody>
</table>





    <div class="date">
      <%= time_ago_in_words(@post.created_at) %><%= t '_post.ago' %>
    </div>
</div>


<!-- コメント数 & 一覧 （ポストした人のみ見れる）-->
<% if current_user?(@post.user) %>
  <div class="ui large blue label">
    <i class="idea icon"></i>
    <%= @post.scomments.count %>
    <a class="detail">スタイリング</a>
  </div>

<!-- もらったコメント一覧 -->
  <%= render @post.scomments %>

<% end %>




<!-- このポストへコメントを送るフォーム（スタイリストならみんな見れる） -->
<% if logged_in? && current_user.stylist? %>
  <%= render 'scomments/scomment_form' %>
<% end %>
