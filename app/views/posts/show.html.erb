＜＜posts/showページはじまり。

<!-- 選択したPost内容 -->
<div class="ui segments">
  <div class="ui segment">
    <p>
      <%= @post.content %>
    </p>
    <%= image_tag @post.picture.url if @post.picture? %>
  </div>
</div>

<!-- コメント数 & 一覧 （ポストした人のみ見れる）-->
<% if current_user?(@post.user) %>
  <span>
    <i class="idea icon"></i>
    <%= @post.scomments.count %>stylings now
  </span>

  <%= render @post.scomments %>

<% end %>

<!-- このポストへコメントを送るフォーム（スタイリストならみんな見れる） -->
<% if logged_in? && current_user.stylist? %>
  <%= render 'scomments/scomment_form' %>
<% end %>
