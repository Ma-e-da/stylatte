<h1>Sign up</h1>

<div class="ui form">
  <%= form_for(@user) do |f| %>



    <div class="field">
      <%= render 'shared/error_messages', object: f.object %>
      <label>Name</label>
      <%= f.text_field :name, class: 'form-control' %>
      <p>You can use nickname here, which is shown to other users and can be changed afterward on EditPage.</p>
    </div>

    <div class="field">
      <label>E-mail</label>
      <%= f.email_field :email, class: 'form-control', placeholder: "joe@schmoe.com"  %>
    </div>

    <div class="field">
      <label>Password</label>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="field">
      <label>Password Confirmation</label>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <%= f.submit "Submit", class: "ui button" %>



  <% end %>
</div>
<p>I understand <%= link_to "Private Policy", policy_path %></p>
