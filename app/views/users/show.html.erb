＞＞users/showページはじまり。(だれからもユーザーを探すをしたら見れるページ。)

<div class="ui two column stackable grid">

<!-- ユーザー情報 -->
<div class="four wide column">
  <!-- ユーザーの自己紹介 -->
  <div class="ui card">
    <div class="image">
      <!-- ラベル、スタイリストならステータスと共に変わる。 -->
      <% if logged_in? && @user.stylist? %>
        <a class="ui red left corner label">
          <i class="heart icon"></i>
        </a>
      <% end %>

      <!-- プロフィール写真 -->
        <% if @user.picture %>
          <%= image_tag @user.picture.url %>
        <% end %>

      </div>

    <div class="content">
      <div class="header">
        <%= @user.name %>
      <div class="right floated description">
        <%= gravatar_for @user %>
      </div>
      </div>
      <div class="description">
        <%= @user.bio %>
      </div>
      <div class="right floated description">
        <%= @user.website %>
      </div>
    </div>
    <div class="extra content">
    <!-- フォロー、アンフォローボタン -->
    <%= render 'follow_form' if logged_in? %>
    </div>

  </div>

  <!-- ユーザーがスタイリストの場合、スタイリングブックをみせる。 -->
  <% if @user.stylist? %>
  <h2>This is My StylingBook!</h2>
  #
  <% end %>


</div>

<!-- ポストを公開している場合、一覧を見せる。 -->
  <div class="twelve wide column">
    <ol class="posts">
      <%= render @posts %>
    </ol>
  </div>

</div>
