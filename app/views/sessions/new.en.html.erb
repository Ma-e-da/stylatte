<div class="ui stripe theming vertical segment">
  <div class="ui stackable very relaxed two column grid container">

<!-- ** Left ** -->
    <div class="center aligned column">
      <h1 class="ui icon header">
        LOG IN
      </h1>
      <p>Free</p>
    </div>

<!-- ** Right **-->
<div class="center aligned column">

  <!-- Form 1.~3.-->
  <div class="ui equal width form">
      <div class="fields">
        <%= form_for(:session, url: login_path) do |f| %>

  <!-- 1.Email -->
            <div class="field">
              <label>E-mail</label>
              <%= f.email_field :email, class: 'form-control', placeholder: "joe@schmoe.com"  %>
            </div>
  <!-- 2.Password -->
            <div class="field">
              <label>Password</label>
              <%= f.password_field :password, class: 'form-control' %>
              <%= link_to "forgot password?", new_password_reset_path %>
            </div>
            <div class="ui divider"></div>
  <!-- 3.Remember me-->
            <div class="field">
              <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
              <% end %>
            </div>

      <% end %>
    </div>
  </div>
  <!-- End of Form 1.~3.-->

</div>

  </div>
</div>

<!-- ** Links to other pages ** -->
  <div class="ui stripe community vertical segment">
    <div class="ui two column center aligned divided very relaxed stackable grid container">
      <div class="row">
        <div class="column">
          <h2 class="ui icon header">
            <i class="user icon"></i>New User?
          </h2>
          <p>Semantic is <b>designed completely with em</b>tablet and mobile.</p>
          <button class="ui green basic button"><%= link_to "Make account", signup_path %></button>
        </div>
        <div class="column">
          <h2 class="ui icon header">
            <i class="question icon"></i>Need Help?
          </h2>
          <p>Semantic has <b>React, Angular, Meteor, Ember</b> and many otherlogic.</p>
          <button class="ui green basic button"><%= link_to "Help", help_path %></button>
        </div>
      </div>
    </div>
  </div>




