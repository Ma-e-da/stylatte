<h1>Log in</h1>


<div class="ui equal width form">

  <%= form_for(:session, url: login_path) do |f| %>

    <div class="fields">
      <div class="field">
        <label>E-mail</label>
        <%= f.email_field :email, class: 'form-control', placeholder: "joe@schmoe.com"  %>
      </div>
      <div class="field">
        <label>Password</label>
        <%= f.password_field :password, class: 'form-control' %>
        <%= link_to "forgot password?", new_password_reset_path %>
      </div>
    </div>


<!-- チェックボックスをつくる まだJS,Turbolinksの問題片付けてから動かせる。-->
<div class="ui checkbox">
    <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span>Remember me on this computer</span>
    <% end %>
</div>



    <%= f.submit "Log in", class: "ui blue basic button" %>


  <% end %>

<p>New User? Easy to make account for free.</p>
<button class="ui green basic button"><%= link_to "Make account", signup_path %></button>


</div>
