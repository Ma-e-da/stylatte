<div class="ui segment">
＞＞shared/_scommentページはじまり。

  <%= form_for( [@post, @post.scomments.create] ) do |f| %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
      <%= f.hidden_field :user_id %>
    </div>
    <div class="actions">
      <button class="button1"><%= f.submit %></button>
    </div>

    <div class="form-group">
      <label for="exampleInputFile">File input</label>
      <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </span>
      <small id="fileHelp" class="form-text text-muted">This is some placeholder block-level help text for the above input.</small>
    </div>

  <% end %>

  ＜＜shared/_scommentページおわり。
</div>

<script type="text/javascript">
  $('#scomment_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
