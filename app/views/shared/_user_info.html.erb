<% @user ||= current_user %>

  <div class="ui card">

<!-- プロフィール写真がまだないとき 、背景つくれなかった。-->
    <div class="image">
      <!-- コーナーラベル：　スタイリストならステータスと共に変わる。 -->
        <% if logged_in? && current_user.stylist? %>
          <a class="ui green left corner label">
            <i class="heart icon"></i>
          </a>
        <% end %>

        <!-- プロフィール写真 -->
          <% if @user.picture %>
            <%= image_tag @user.picture.url %>
          <% end %>
    </div>


    <div class="content">
      <div class="header">
        <%= current_user.name %>
      </div>
      <div class="description">
        <%= current_user.bio %>
      </div>
      <div class="right floated description">
        <%= current_user.website %>
      </div>
    </div>

<% if logged_in? %>
    <div class="extra content">
      <span class="left floated">
        <i class="idea icon"></i>
        <%= link_to "See My got Stylings", got_path %><br>
      </span>
    </div>

    <div class="extra content">
      <span class="right floated">
        <%= link_to "Edit profile", edit_user_path(current_user) %>
      </span>
    </div>
<% end %>

  </div>
