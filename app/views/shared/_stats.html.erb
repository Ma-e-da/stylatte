
<!-- Stats -->
  <% @user ||= current_user %>
  <div class="stats">
    <a href="<%= following_user_path(@user) %>">
      <strong class="stat">
        <%= @user.following.count %>
      </strong>
      following
    </a>
    <a href="<%= followers_user_path(@user) %>">
      <strong class="stat">
        <%= @user.followers.count %>
      </strong>
      followers
    </a>
    <a href="<%= posts_path(@user) %>">
      <strong class="stat">
        <%= @user.posts.count %>
      </strong>
      posts
    </a>

    <strong class="stat">
      <%= @user.favorite_scomments.count %>
      <%= link_to "favorites", favorites_path(current_user) %>
      <i class="heart icon"></i>
    </strong>
  </div>
